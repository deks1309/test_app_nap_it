<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ToggleButton">
        <item name="android:background">@drawable/bg_toggle_btn</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@drawable/text_color_toggle_btn</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:button">@null</item>

    </style>

    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:elevation">4dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.EditText.ToolbarSearch">
        <item name="android:drawableStart">@drawable/ic_search_24px</item>
        <item name="android:drawableEnd">@drawable/ic_mic_24px</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">#757575</item>
    </style>

</resources>
